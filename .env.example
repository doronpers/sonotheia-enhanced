
# Sonotheia Enhanced Configuration

# API Keys for Red Team Generator
ELEVENLABS_API_KEY=
OPENAI_API_KEY=

# HuggingFace Configuration (Optional)
# Note: HUGGINGFACE_TOKEN is NOT required for operation
# If not set and GPU available, HFEnsembleSensor will use local mode
# If not set and no GPU, HFEnsembleSensor will be disabled (fails open)
HUGGINGFACE_TOKEN=

# HFEnsembleSensor Mode Control (Optional)
# Options: 'auto' (default), 'api', 'local'
# - auto: Automatically select based on token and GPU availability
# - api: Force API mode (requires HUGGINGFACE_TOKEN)
# - local: Force local mode (requires GPU/CPU with transformers)
# HF_MODE=auto

# HFEnsembleSensor Feature Flags (Optional)
# HF_LOCAL_FALLBACK=true
# HF_WARMUP_ENABLED=true
# HF_ENSEMBLE_MODELS=MelodyMachine/Deepfake-audio-detection-V2,mo-thecreator/Deepfake-audio-detection

# Backend Config
# DEMO_MODE controls whether to use demo/placeholder data
# Set to false for production use
DEMO_MODE=false
LOG_LEVEL=INFO

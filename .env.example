# Sonotheia Enhanced - Environment Configuration
# Copy this file to .env and configure as needed

# ============================================
# Application Mode
# ============================================
# Set to false in production to disable demo mode
DEMO_MODE=true

# ============================================
# Backend Configuration
# ============================================
# Backend API host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Python environment
PYTHONUNBUFFERED=1

# ============================================
# Frontend Configuration
# ============================================
# Frontend port
FRONTEND_PORT=3000

# Backend API URL (used by frontend)
REACT_APP_API_URL=http://localhost:8000

# ============================================
# Security (Production)
# ============================================
# API Key for authentication (optional, recommended for production)
# API_KEY=your-secure-api-key-here

# Enable rate limiting (recommended for production)
# RATE_LIMIT_ENABLED=true

# ============================================
# Database (Optional - for production)
# ============================================
# DATABASE_URL=postgresql://user:password@localhost:5432/sonotheia
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Logging
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
